generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Equipment {
  id                 String        @id @default(uuid())
  name               String
  code               String        @unique
  description        String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  setupMatrixFrom    SetupMatrix[] @relation("SetupMatrix_fromEquipmentIdToEquipment")
  setupMatrixTo      SetupMatrix[] @relation("SetupMatrix_toEquipmentIdToEquipment")

  @@index([code])
}

model GameSession {
  id          String   @id @default(uuid())
  playerName  String
  score       Int
  totalTime   Int
  setupCount  Int      @default(0)
  averageTime Float?
  difficulty  Int      @default(1)
  completedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([completedAt])
  @@index([playerName])
  @@index([score])
}

model SetupMatrix {
  id              String    @id @default(uuid())
  fromEquipmentId String
  toEquipmentId   String
  setupTime       Int
  difficulty      Int       @default(1)
  description     String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  fromEquipment   Equipment @relation("SetupMatrix_fromEquipmentIdToEquipment", fields: [fromEquipmentId], references: [id], onDelete: Cascade)
  toEquipment     Equipment @relation("SetupMatrix_toEquipmentIdToEquipment", fields: [toEquipmentId], references: [id], onDelete: Cascade)

  @@unique([fromEquipmentId, toEquipmentId])
  @@index([fromEquipmentId])
  @@index([toEquipmentId])
}
